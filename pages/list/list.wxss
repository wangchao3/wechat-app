.item {
    background-color: #fff;
    padding: 10px;
    border: 1px solid #ececec;
    margin-bottom: 5px;
    box-shadow: 0 1px 0 #EAEBEC;
    display: block;
    text-decoration: none;
    width: 690rpx;
}
.list-title {
    margin-bottom: 10px;
    color: #000;
    font-size: 14px;
    border-bottom: 1px solid #EAEBEC;
    padding-bottom: 10px;
}
.infoItem {
    display: table-cell;
    width: 33%;
}
.investNow span {
    font-size: 12px;
    padding: 4px 0;
    margin: 0 auto;
    width: 70%;
    line-height: inherit;
}
.item_body {
    display: table;
    width: 100%;
}
.item-block{
    font-size: 10px;
    color: #96999F;
}
.color-yellow {
    color: #FDA300;
    font-size: 20px;
    margin-bottom: 4px;
}
.color-black {
    color: #666;
    font-size: 20px;
    margin-bottom: 4px;
}
.container{
    height: 1500rpx;
}
