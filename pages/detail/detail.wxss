.detail {
    width: 100%;
}
.detail .top-item {
    background-color: #FDA300;
    color: #fff;
    width: 100%;
    font-size: 14px;
}
.infoItem {
    display: inline-block;
    width: 33%;
    border-right: 1px solid #EA8A07;
}
.infoItem:last-child {
    border-right: none;
}
.item_body {
    display: table;
    width: 100%;
    background-color: #EB9607;
    padding: 20rpx 0;
}
.item_body text {
    display: block;
}
.border {
    border: 1px solid #fff;
    padding: 3rpx 15rpx;
    border-radius: 20rpx;
    margin: 10rpx;
}
image {
    width: 20px;
    height: 20px;
    margin-right: 5px;
    margin-top: 5px;
}
.list-group {
    width: 100%;
    background-color: #FFFFFF;
    line-height: 1.47058824;
    font-size: 17px;
    overflow: hidden;
    position: relative;
    margin-top: 10px;
}
.list-group:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    z-index: 2;
}
.list-item:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    left: 15px;
    z-index: 2;
}
.list-group:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    z-index: 2;
}
.list-item {
    padding: 10px 15px;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.item-title {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}
.item-des {
    padding-right: 13px;
    position: relative;
    text-align: right;
    color: #999;
}
.item-des:after {
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px
}
